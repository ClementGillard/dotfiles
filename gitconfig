[core]
  editor = vim
  pager = less -F -X
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[commit]
  verbose = true
[pull]
  rebase = true
[branch]
  autosetuprebase = always
[push]
  default = current
[user]
  name = Cl√©ment Gillard
  email = clement.gillard@epita.fr
[merge]
  tool = vimdiff
[rebase]
  autosquash = true
[alias]
  st = status
  co = checkout

  amend = commit --amend --no-edit
  abort = rebase --abort
  continue = rebase --continue
  skip = rebase --skip
  fixup = commit --fixup

  tree = log --graph --full-history --all --decorate --oneline --color
  re = !git fetch && git rebase origin/master
  initial = !git commit -m 'Initial commit' --allow-empty && git tag init

  dumbcommit = "!git commit -m \"$(curl whatthecommit.com/index.txt)\""
